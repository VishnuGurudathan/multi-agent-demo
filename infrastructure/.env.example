# Environment variables for multi-agent system

# =============================================================================
# REQUIRED API KEYS
# =============================================================================
GROQ_API_KEY=your_groq_api_key_here
TAVILY_API_KEY=your_tavily_api_key_here

# =============================================================================
# BACKEND CONFIGURATION
# =============================================================================

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=false

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Agent Configuration
MAX_ITERATIONS=10
MODEL_NAME=llama-3.1-8b-instant
TEMPERATURE=0.7
MAX_TOKENS=2000

# CORS Configuration (comma-separated URLs)
CORS_ORIGINS=http://localhost:8501,http://127.0.0.1:8501

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30

# Task Configuration
TASK_TIMEOUT=300
MAX_CONCURRENT_TASKS=10

# Database Configuration (optional, for future use)
# DATABASE_URL=postgresql://user:password@localhost:5432/multiagent

# =============================================================================
# UI CONFIGURATION
# =============================================================================

# Backend API Configuration
BACKEND_API_URL=http://localhost:8000
BACKEND_WS_URL=ws://localhost:8000

# Streamlit Configuration
APP_TITLE=Multi-Agent System
PAGE_ICON=ðŸ¤–
LAYOUT=wide

# UI Behavior
AUTO_REFRESH_INTERVAL=5
MAX_DISPLAY_TASKS=50

# API Request Configuration
REQUEST_TIMEOUT=30
MAX_RETRIES=3

# WebSocket Configuration
WS_RECONNECT_ATTEMPTS=5
WS_RECONNECT_DELAY=2

# Theme and Features
THEME=light
PRIMARY_COLOR=#FF4B4B
ENABLE_WEBSOCKETS=true
ENABLE_FILE_UPLOAD=false
ENABLE_TASK_HISTORY=true
ENABLE_DEBUG=false
